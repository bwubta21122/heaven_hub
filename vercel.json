{
    "version": 2,
    "rewrites": [
        { "source": "/(.*)", "destination": "/appolo" },
        { "source": "/(.*)", "destination": "BACKEND/index.js" }
    ],
    "builds": [
        {
            "src": "BACKEND/index.js",
            "use": "@vercel/node",
            "config": { "includeFiles": ["dist/**"] }
        }
    ]
}
